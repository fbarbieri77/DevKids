@page
@model DevKids_v1.Areas.Wallet.Pages.WalletModel

@{
    ViewData["Title"] = "Manage Purchases";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].ProjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].ProjectTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].DateIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].DateOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].PaymentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].RefundId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase[0].HasAccess)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Purchase) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefundId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAccess)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
