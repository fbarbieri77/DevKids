@page
@model DevKids_v1.Pages.Projects.CreateModel

@{
    ViewData["Title"] = "Create Project";
}

<h1>@ViewData["Title"]</h1>

<h4>Project</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.Name" class="control-label"></label>
                <input asp-for="Project.Name" class="form-control" />
                <span asp-validation-for="Project.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <textarea asp-for="Project.Description" class="form-control" rows="30"></textarea>
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valid.Duration" class="control-label"></label>
                <input asp-for="Valid.Duration" class="form-control" />
                <span asp-validation-for="Valid.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.CodeLanguage" class="control-label"></label>
                <input asp-for="Project.CodeLanguage" class="form-control" />
                <span asp-validation-for="Project.CodeLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.TeachLanguage" class="control-label"></label>
                <input asp-for="Project.TeachLanguage" class="form-control" />
                <span asp-validation-for="Project.TeachLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valid.Price" class="control-label"></label>
                <input asp-for="Valid.Price" class="form-control" />
                <span asp-validation-for="Valid.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Project.IsOpenToVote" /> @Html.DisplayNameFor(model => model.Project.IsOpenToVote)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Project.IsActive" /> @Html.DisplayNameFor(model => model.Project.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create and add resources" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
